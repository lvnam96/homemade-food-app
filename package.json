{
  "name": "homemade-food-app",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx ./app/.server/db/migrate.ts",
    "db:sample": "tsx ./app/.server/db/sample.ts",
    "prepare": "husky",
    "build": "remix vite:build",
    "db:up": "docker compose -f docker-compose-db.yml up",
    "predev": "pnpm run db:up -d",
    "dev": "remix vite:dev",
    "postdev": "docker compose -f docker-compose-db.yml down",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:css": "stylelint --report-needless-disables --report-invalid-scope-disables --report-descriptionless-disables",
    "start": "NODE_OPTIONS='--import ./instrumentation.server.mjs' remix-serve ./build/server/index.js",
    "format": "prettier --write .",
    "typecheck": "tsc"
  },
  "lint-staged": {
    "*.{css,scss}": [
      "stylelint --report-needless-disables --report-invalid-scope-disables --report-descriptionless-disables --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json,ts,tsx,js,jsx,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "browserslist": {
    "production": [
      ">0.01% in VN and not dead and not op_mini all and not iOS <15 and not chrome <91 and not safari <15.5 and not samsung <15 and not opera <83"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.28.0",
    "@neondatabase/serverless": "^0.10.3",
    "@remix-run/node": "^2.14.0",
    "@remix-run/react": "^2.14.0",
    "@remix-run/serve": "^2.14.0",
    "@sentry/remix": "^8.38.0",
    "@sentry/vite-plugin": "^2.22.6",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.36.4",
    "fastest-validator": "^1.19.0",
    "isbot": "^5.1.17",
    "pg": "^8.13.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@commitlint/types": "^19.5.0",
    "@remix-run/dev": "^2.14.0",
    "@tailwindcss/nesting": "0.0.0-insiders.565cd3e",
    "@types/pg": "^8.11.10",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "autoprefixer": "^10.4.20",
    "drizzle-kit": "^0.28.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-promise": "^7.1.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.49",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-import": "^16.1.0",
    "postcss-mixins": "^11.0.3",
    "postcss-nesting": "^13.0.1",
    "postcss-preset-env": "^10.1.0",
    "postcss-utilities": "^0.8.4",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "stylelint": "^16.10.0",
    "stylelint-config-standard": "^36.0.1",
    "tailwindcss": "^3.4.14",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vite": "^5.4.11",
    "vite-tsconfig-paths": "^5.1.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@9.14.2+sha512.6e2baf77d06b9362294152c851c4f278ede37ab1eba3a55fda317a4a17b209f4dbb973fb250a77abc463a341fcb1f17f17cfa24091c4eb319cda0d9b84278387"
}
